# ============================================================================
# LOCAL TESTING - NO LLM NEEDED (Test Ingestion Only)
# ============================================================================
# Use this to test ingestion WITHOUT needing any LLM API key!
# This tests: Download papers → Create embeddings → Store in Qdrant

# Model providers
LLM_PROVIDER="openai"  # Won't be used for ingestion
EMBEDDING_PROVIDER="huggingface"  # FREE - no API key needed!

# LLM settings (not needed for ingestion, but set dummy values)
OPENAI_BASE_URL=""
OPENAI_API_KEY=""
OPENAI_MODEL="gpt-4o-mini"

# Embeddings - HuggingFace (FREE, no API key!)
HUGGINGFACE_MODEL="sentence-transformers/all-MiniLM-L6-v2"

# No Basic auth needed
OPENAI_AUTH_USERNAME=""
OPENAI_AUTH_PASSWORD=""

# Qdrant
QDRANT_URL="http://localhost:6334"
QDRANT_COLLECTION="arxiv_papers"

# Ingestion
ARXIV_QUERY="machine learning"
ARXIV_MAX_DOCS=3

# Ports
LANGCHAIN_PORT=9010
LLAMAINDEX_PORT=9020
INGESTION_PORT=9030
LANGSMITH_TRACING=false
DUCKDUCKGO_RESULTS=3

