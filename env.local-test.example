# ============================================================================
# LOCAL TESTING CONFIGURATION (Free APIs - No Company Credentials Needed)
# ============================================================================
# Use this to test the project locally with free services
# Once working, switch to company API by changing env vars

# Model providers - using free services for testing
LLM_PROVIDER="openai"
EMBEDDING_PROVIDER="huggingface"  # Free, no API key needed!

# Free LLM Options:
# Option 1: Groq (free tier, fast)
OPENAI_BASE_URL="https://api.groq.com/openai/v1"
OPENAI_API_KEY="gsk_your-groq-api-key-here"  # Get free at https://console.groq.com/
OPENAI_MODEL="llama-3.1-70b-versatile"

# Option 2: Together AI (free tier)
# OPENAI_BASE_URL="https://api.together.xyz/v1"
# OPENAI_API_KEY="your-together-api-key"  # Get free at https://together.ai/
# OPENAI_MODEL="meta-llama/Llama-3-8b-chat-hf"

# Option 3: Local Ollama (if you have it installed)
# LLM_PROVIDER="ollama"
# OLLAMA_BASE_URL="http://localhost:11434"
# OLLAMA_MODEL="llama3.1:8b"

# Embeddings - HuggingFace (FREE, no API key!)
EMBEDDING_PROVIDER="huggingface"
HUGGINGFACE_MODEL="sentence-transformers/all-MiniLM-L6-v2"  # 384 dimensions

# No Basic auth needed for free services!
# OPENAI_AUTH_USERNAME=""  # Leave empty
# OPENAI_AUTH_PASSWORD=""  # Leave empty

# ============================================================================
# QDRANT CONFIGURATION
# ============================================================================
QDRANT_URL="http://localhost:6334"
QDRANT_COLLECTION="arxiv_papers"

# ============================================================================
# INGESTION CONFIGURATION
# ============================================================================
ARXIV_QUERY="quantum computing"
ARXIV_MAX_DOCS=5

# ============================================================================
# OPTIONAL: LANGCHAIN/LANGSMITH
# ============================================================================
LANGSMITH_API_KEY=""
LANGSMITH_TRACING=false

DUCKDUCKGO_RESULTS=3

# Port configuration
LANGCHAIN_HOST="0.0.0.0"
LANGCHAIN_PORT=9010
LLAMAINDEX_HOST="0.0.0.0"
LLAMAINDEX_PORT=9020
INGESTION_HOST="0.0.0.0"
INGESTION_PORT=9030

