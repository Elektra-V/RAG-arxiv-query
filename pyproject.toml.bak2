[project]
name = "rag-api"
version = "0.0.1"
description = "Dual-service RAG API with LangChain and LlamaIndex frontends"
readme = "README.md"
requires-python = ">=3.12"
dependencies = [
    "python-dotenv>=1.0.1",
    "pydantic>=2.9.2",
    "pydantic-settings>=2.4.0",
    "fastapi>=0.115.5",
    "uvicorn>=0.30.6",
    "typer>=0.12.5",
    "requests>=2.32.3",
    "tenacity>=9.0.0",
    "langchain>=0.2.11",
    "langchain-core>=0.2.27",
    "langchain-community>=0.2.10",
    "langchain-huggingface>=0.1.1",
    "langchain-ollama>=0.1.1",
    "langchain-openai>=0.1.0",
    "langchain-anthropic>=0.1.0",
    "langgraph>=0.1.0",
    "langgraph-cli[inmem]>=0.5.0", # Includes langgraph-api for dev server
    "duckduckgo-search>=6.1.0",
    "ddgs>=0.6.2",
    "sentence-transformers>=2.7.0",
    "qdrant-client>=1.9.0",
    "llama-index>=0.11.14",
    "llama-index-embeddings-huggingface>=0.2.0",
    "llama-index-embeddings-openai>=0.2.0",
    "llama-index-vector-stores-qdrant>=0.2.1",
    "llama-index-llms-ollama>=0.2.0",
    "llama-index-llms-openai>=0.2.0",
    "llama-index-llms-anthropic>=0.2.0",
    "arxiv>=2.2.0",
    "pymupdf>=1.26.0",
]

[project.scripts]
rag-api-ingest = "rag_api.ingestion.cli:main"

[tool.uv]
package = true

[build-system]
requires = ["setuptools>=68", "wheel"]
build-backend = "setuptools.build_meta"

[tool.setuptools.packages.find]
include = ["rag_api*"]
exclude = ["docker*"]
