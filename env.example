# ============================================================================
# COMPANY API CONFIGURATION
# ============================================================================
# Follow the official company API pattern from documentation

# Model providers - using company API
LLM_PROVIDER="openai"
EMBEDDING_PROVIDER="openai"

# Company API Gateway (Fraunhofer GenAI)
OPENAI_BASE_URL="https://genai.iais.fraunhofer.de/api/v2"
OPENAI_AUTH_USERNAME="my-username"
OPENAI_AUTH_PASSWORD="my-password"
OPENAI_API_KEY="xxxx"  # Placeholder when using Basic auth

# Model names - check available models with: uv run python check_company_models.py
OPENAI_MODEL="Llama-3-SauerkrautLM"
OPENAI_EMBEDDING_MODEL="text-embedding-3-small"  # May need to change based on available models

# ============================================================================
# QDRANT CONFIGURATION
# ============================================================================
# Qdrant port changed to avoid conflicts (use 6334 instead of 6333)
QDRANT_URL="http://localhost:6334"
QDRANT_COLLECTION="arxiv_papers"

# ============================================================================
# INGESTION CONFIGURATION
# ============================================================================
ARXIV_QUERY="quantum computing"
ARXIV_MAX_DOCS=5

# ============================================================================
# OPTIONAL: LANGCHAIN/LANGSMITH
# ============================================================================
LANGSMITH_API_KEY=""
LANGSMITH_TRACING=false
LANGSMITH_PROJECT="rag-api-langchain"
LANGSMITH_ENDPOINT="https://api.smith.langchain.com"

DUCKDUCKGO_RESULTS=3

# Port configuration - changed to avoid conflicts with original project
LANGCHAIN_HOST="0.0.0.0"
LANGCHAIN_PORT=9010
LLAMAINDEX_HOST="0.0.0.0"
LLAMAINDEX_PORT=9020
INGESTION_HOST="0.0.0.0"
INGESTION_PORT=9030
