# ============================================================================
# OpenAI Platform Configuration
# ============================================================================

# ============================================================================
# REQUIRED SETTINGS
# ============================================================================
LLM_PROVIDER="openai"
EMBEDDING_PROVIDER="openai"  # Uses OpenAI Platform embeddings
# Alternative: EMBEDDING_PROVIDER="huggingface"  # Free local embeddings (slower, CPU only)

# OpenAI Platform Authentication (Required)
OPENAI_API_KEY="sk-..."  # Your OpenAI Platform API key

# Model Configuration
OPENAI_MODEL="gpt-4o-mini"  # OpenAI models: "gpt-4o", "gpt-4o-mini", "gpt-3.5-turbo"
# For gateway models (OpenRouter, Together AI, etc.), use full model path: "openai/gpt-oss-20b:free"
# OPENAI_EMBEDDING_MODEL=""  # Leave empty for auto-detection (defaults to text-embedding-3-small)
# OPENAI_BASE_URL=""  # Optional: Custom base URL for gateway/proxy (e.g., "https://openrouter.ai/api/v1")
# OPENROUTER_HTTP_REFERER=""  # Optional: HTTP-Referer header for OpenRouter (e.g., "https://github.com/yourusername/yourrepo")
# OPENROUTER_X_TITLE=""  # Optional: X-Title header for OpenRouter (e.g., "RAG API")

# ============================================================================
# QDRANT DATABASE SETTINGS
# ============================================================================
QDRANT_URL="http://localhost:6334"
QDRANT_COLLECTION="arxiv_papers"

# ============================================================================
# INGESTION SETTINGS
# ============================================================================
ARXIV_QUERY="quantum computing"
ARXIV_MAX_DOCS=5

# ============================================================================
# LANGCHAIN/LANGSMITH SETTINGS (Optional)
# ============================================================================
# LangSmith Configuration for Tracing and Observability
# Get your API key from: https://smith.langchain.com/settings
LANGSMITH_API_KEY=""  # Your LangSmith API key (starts with "lsv2_pt_...")
LANGSMITH_TRACING=false  # Set to "true" to enable LangSmith tracing
LANGSMITH_PROJECT="rag-api-langchain"  # Project name in LangSmith
LANGSMITH_ENDPOINT="https://api.smith.langchain.com"  # US instance (default)
# LANGSMITH_ENDPOINT="https://eu.api.smith.langchain.com"  # Use this for EU instance

# ============================================================================
# SEARCH CONFIGURATION
# ============================================================================
ARXIV_SEARCH_MAX_RESULTS=5  # Maximum results for arxiv_search tool

# ============================================================================
# PORT CONFIGURATION
# ============================================================================
LANGCHAIN_HOST="0.0.0.0"
LANGCHAIN_PORT=9010
LLAMAINDEX_HOST="0.0.0.0"
LLAMAINDEX_PORT=9020
INGESTION_HOST="0.0.0.0"
INGESTION_PORT=9030
